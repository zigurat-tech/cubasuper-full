{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@context/*": ["context/*"],
      "@theme/*": ["theme/*"],
      "@store/*": ["store/*"],
      "@services/*": ["services/*"],
      "@server/*": ["server/*"],
      "@type/*": ["type/*"],
      "@utils/*": ["utils/*"],
      "@api/*": ["api/*"],
      "@hooks/*": ["hooks/*"],
      "public/*":["../public/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
